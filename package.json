{
	"name": "root",
	"workspaces": [
		"packages/*"
	],
	"description": "Types definitions for RAGE:MP",
	"scripts": {
		"bump-versions": "lerna version --tag-version-prefix='' --no-push"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/libertymp/type-definitions.git"
	},
	"author": "@libertymp",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/libertymp/type-definitions/issues"
	},
	"homepage": "https://github.com/libertymp/type-definitions#readme",
	"devDependencies": {
		"lerna": "^4.0.0",
		"prettier": "^2.4.1"
	},
	"keywords": [
		"gta5",
		"gta",
		"ragemp",
		"rage",
		"ragemp-ts",
		"ragemp-dts",
		"ragemp-types",
		"typescript"
	],
	"prettier": {
		"$schema": "http://json.schemastore.org/prettierrc",
		"endOfLine": "lf",
		"printWidth": 150,
		"quoteProps": "as-needed",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true,
		"overrides": [
			{
				"files": "*.yml",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	}
}
